---
import Logo from './Logo.astro';

const navItems = [
  { href: '/mcp-go/', label: 'Home' },
  { href: '/mcp-go/getting-started', label: 'Getting Started' },
  { href: '/mcp-go/concepts', label: 'Concepts' },
  { href: '/mcp-go/comparison', label: 'Comparison' },
  { href: '/mcp-go/faq', label: 'FAQ' },
];
---

<header class="header">
  <div class="container header-inner">
    <a href="/mcp-go/" class="logo">
      <Logo size={28} class="logo-icon" />
      <span class="logo-text">mcp-go</span>
    </a>

    <button class="menu-toggle" aria-label="Toggle menu" aria-expanded="false">
      <span class="hamburger"></span>
    </button>

    <nav class="nav">
      {navItems.map((item) => (
        <a href={item.href} class="nav-link">{item.label}</a>
      ))}
      <a href="https://github.com/felixgeelhaar/mcp-go" class="nav-link nav-github" target="_blank" rel="noopener">
        GitHub
      </a>
    </nav>
  </div>
</header>

<script>
  function initHeaderMenu() {
    const toggle = document.querySelector('.menu-toggle');
    const nav = document.querySelector('.nav');
    const header = document.querySelector('.header');
    let lastFocusedElement = null;

    if (!toggle || !nav || !header) return;

    const getFocusableNavElements = () => {
      return Array.from(
        nav.querySelectorAll('a, button, [tabindex]:not([tabindex="-1"])')
      ).filter((el) => {
        return !el.hasAttribute('disabled') && el.getAttribute('aria-hidden') !== 'true';
      });
    };

    const openMenu = () => {
      // Remember the element that had focus before opening
      if (document.activeElement instanceof HTMLElement) {
        lastFocusedElement = document.activeElement;
      } else {
        lastFocusedElement = null;
      }

      toggle.setAttribute('aria-expanded', 'true');
      nav.classList.add('nav-open');
      header.classList.add('menu-open');

      const focusable = getFocusableNavElements();
      if (focusable.length > 0) {
        focusable[0].focus();
      }
    };

    const closeMenu = () => {
      toggle.setAttribute('aria-expanded', 'false');
      nav.classList.remove('nav-open');
      header.classList.remove('menu-open');

      // Restore focus to the element that was focused before opening, if possible
      if (lastFocusedElement && document.contains(lastFocusedElement)) {
        lastFocusedElement.focus();
      } else {
        toggle.focus();
      }
    };

    toggle.addEventListener('click', () => {
      const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
      if (isExpanded) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    // Close menu when clicking a link
    nav.querySelectorAll('.nav-link').forEach((link) => {
      link.addEventListener('click', () => {
        closeMenu();
      });
    });

    // Trap focus within the navigation when the menu is open,
    // and allow Escape to close the menu.
    document.addEventListener('keydown', (event) => {
      const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
      if (!isExpanded) return;

      if (event.key === 'Escape' || event.key === 'Esc') {
        event.preventDefault();
        closeMenu();
        return;
      }

      if (event.key !== 'Tab') {
        return;
      }

      const focusable = getFocusableNavElements();
      if (focusable.length === 0) {
        return;
      }

      const first = focusable[0];
      const last = focusable[focusable.length - 1];
      const current = document.activeElement;

      // If focus is outside the nav when the menu is open, move it to the first item
      if (!current || !nav.contains(current)) {
        event.preventDefault();
        first.focus();
        return;
      }

      if (event.shiftKey && current === first) {
        event.preventDefault();
        last.focus();
      } else if (!event.shiftKey && current === last) {
        event.preventDefault();
        first.focus();
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initHeaderMenu, { once: true });
  } else {
    initHeaderMenu();
  }
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: var(--color-bg-root);
    border-bottom: 1px solid var(--color-border-default);
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 64px;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    text-decoration: none;
    z-index: 101;
  }

  .logo-icon {
    color: var(--color-accent);
  }

  .logo-text {
    font-size: var(--text-lg);
    font-weight: 600;
    font-family: var(--font-mono);
    color: var(--color-text-primary);
  }

  .menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-2);
    z-index: 101;
  }

  .hamburger {
    display: block;
    width: 24px;
    height: 2px;
    background-color: var(--color-text-primary);
    position: relative;
    transition: background-color 0.2s ease;
  }

  .hamburger::before,
  .hamburger::after {
    content: '';
    position: absolute;
    left: 0;
    width: 24px;
    height: 2px;
    background-color: var(--color-text-primary);
    transition: transform 0.2s ease;
  }

  .hamburger::before {
    top: -7px;
  }

  .hamburger::after {
    top: 7px;
  }

  .menu-toggle[aria-expanded="true"] .hamburger {
    background-color: transparent;
  }

  .menu-toggle[aria-expanded="true"] .hamburger::before {
    transform: translateY(7px) rotate(45deg);
  }

  .menu-toggle[aria-expanded="true"] .hamburger::after {
    transform: translateY(-7px) rotate(-45deg);
  }

  .nav {
    display: flex;
    align-items: center;
    gap: var(--space-6);
  }

  .nav-link {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .nav-link:hover {
    color: var(--color-text-primary);
  }

  .nav-github {
    padding: var(--space-2) var(--space-4);
    border: 1px solid var(--color-border-default);
    border-radius: var(--radius-md);
  }

  .nav-github:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: block;
    }

    .nav {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      flex-direction: column;
      justify-content: center;
      gap: var(--space-6);
      background-color: var(--color-bg-root);
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.2s ease, visibility 0.2s ease;
    }

    .nav-open {
      opacity: 1;
      visibility: visible;
    }

    .nav-link {
      font-size: var(--text-xl);
    }

    .nav-github {
      margin-top: var(--space-4);
    }
  }
</style>
